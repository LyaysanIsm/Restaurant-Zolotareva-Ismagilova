@model RestaurantBusinessLogic.BindingModels.RequestFoodBindingModel

@{
    ViewData["Title"] = "Пополнение";
}

<div class="text-left">
    <h4>Пополнение холодильника №@ViewBag.FridgeId</h4>
</div>

<hr />
<div>
    <a class="text-dark" asp-action="ListFoods" asp-route-fridgeId="@ViewBag.FridgeId">Вернуться назад</a>
</div>
<hr />

<div class="text-left">
    <h4>@ViewBag.FoodName</h4>
</div>

<div class="row">
    <div class="col-md-4">
        <form asp-controller="Fridge" asp-action="AddFood">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="FridgeId" />
            <input type="hidden" asp-for="FoodId" />
            <div class="form-group">
                <label asp-for="Count" class="control-label">Количество</label>
                <input asp-for="Count" class="form-control" />
                <span asp-validation-for="Count" class="text-danger"></span>
                <label asp-for="Price" class="control-label">Стоимость</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Пополнить" class="btn btn-dark" />
            </div>
        </form>
    </div>
</div>